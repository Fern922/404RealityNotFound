{
  "version": 2,
  "builds": [
    { "src": "client/vite.config.ts", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "server/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/server/(.*)", "dest": "/server/$1" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ]
}
