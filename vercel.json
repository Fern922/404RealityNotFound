{
  "builds": [
    { "src": "client/vite.config.ts", "use": "@vercel/static-build", "config": { "distDir": "public" } },
    { "src": "api/index.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}

